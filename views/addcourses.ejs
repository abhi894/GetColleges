<%- include ("./includes/header") %>

<div class="container">

   <center> <h2 style="margin: 3rem;"> Enter the Course details for <%= collegeid %></h2> </center>

   <div class="row" style="margin-bottom: 5rem;" >
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="form-group">
    <form action="/courses/<%= collegeid%>" method="POST">
      <label class="form-check-label" for="cat"> Category &nbsp; </label>
      <select id="cat" class="form-control" name="category">
        <option value="eng">Engineering</option>
        <option value="saab">Management</option>
        <option value="med">Medical</option>
        <option value="oth">Others</option>
      </select>
    </div>

    <div class="form-group">
      <label for="name">Name : </label>
      <input type="text" name="name" class="form-control" id="name" required>
      <small id="passwordHelpBlock" class="form-text text-muted">
         Enter Name of the course 
        </small>
    </div>
  
      <div class="form-group">
      <label class="form-check-label" for="level"> Level &nbsp; </label>
      <select id="level" class="form-control" name="level">
        <option value="U.G.">U.G.</option>
        <option value="P.G.">P.G.</option>
        <option value="oth">Others</option>
      </select>
    </div>

      <div class="form-group">
        <label for="eligibility">Eligibility : </label>
        <input type="text" name="eligibility" class="form-control" id="eligibility" required>
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter Eligibility Criteria
          </small>
      </div>
      <div class="form-group">
        <label for="term">Term : </label>
        <input type="text" name="term" class="form-control" id="term" required>
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter the term, Specify weather Year of Month
          </small>
      </div>
        <h3> Fees </h3> <br>

        <div class="row">
            <h4> Category 1 </h4>
            <div class="col-sm">
      <div class="form-group">
        <label for="quota1">Quota : </label>
        <input type="text" name="quota1" class="form-control" id="quota1" required>
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter the Quota
          </small>
      </div>
      </div>
      <div class="col-sm">
      <div class="form-group">
        <label for="amt1">Amount : </label>
        <input type="text" name="amt1" class="form-control" id="amt1" required>
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter the Amount.
          </small>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-group">
        <label for="hst1">For Hostel : </label>
        <input type="text" name="hst1" class="form-control" id="hst1"required >
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter the Amount for hostel
          </small>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-group">
        <label for="tm1">Term of fee : </label>
        <input type="text" name="tm1" class="form-control" id="tm1" required >
        <small id="passwordHelpBlock" class="form-text text-muted">
           Specify if its yearly, per semester or for full term.
          </small>
      </div>
      </div>
        </div>

        <div class="row">
            <h4> Category 2 </h4>
            <div class="col-sm">
      <div class="form-group">
        <label for="quota2">Quota : </label>
        <input type="text" name="quota2" class="form-control" id="quota2" >
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter the Quota
          </small>
      </div>
      </div>
      <div class="col-sm">
      <div class="form-group">
        <label for="amt2">Amount : </label>
        <input type="text" name="amt2" class="form-control" id="amt2" >
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter the Amount.
          </small>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-group">
        <label for="hst2">For Hostel : </label>
        <input type="text" name="hst2" class="form-control" id="hst2" >
        <small id="passwordHelpBlock" class="form-text text-muted">
           Enter the Amount for hostel
          </small>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-group">
        <label for="tm2">Term of fee : </label>
        <input type="text" name="tm2" class="form-control" id="tm2" >
        <small id="passwordHelpBlock" class="form-text text-muted">
           Specify if its yearly, per semsster or for full term.
          </small>
      </div>
      </div>
        </div>

        <button class="btn btn-primary"> Submit </button>


    </form>
    </div>
    <div class="col-md-3"></div>
    </div>
  
  </div>

  <%- include ("includes/footer") %>