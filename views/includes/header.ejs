              <% } else{ %>
                <a class="dropdown-item bg-primary" href="/profile"><button class="btn btn-outline-success text-white" style="border: 0px; " type="button">Profile</button></a>
                <a class="dropdown-item bg-primary" href="/logout"><button class="btn btn-outline-success text-white" style="border: 0px; " type="button">Logout</button></a>
                <% } %>
              </div>
          </div>
        </li>
  
        <li class="nav-item"> 
          <a class="nav-link" href="/about"><button class="btn btn-outline-success text-white" style="border: 0px;" type="button">About Us</button></a>
        </li>
      </ul>
      
    </div>

</nav>

<!-- Load Facebook SDK for JavaScript -->
<div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      xfbml            : true,
      version          : 'v6.0'
    });
  };

  (function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

