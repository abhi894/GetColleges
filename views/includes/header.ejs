      <ul class="navbar-nav ml-auto mt-2 mt-lg-0 ">
        <li class="nav-item " >
          <a class="nav-link" href="/colleges"><button class="btn btn-outline-success text-white" style="border: 0px;" type="button">Colleges</button></a>
        </li>

        <%if( currentUser && currentUser.admin == true ){ %>
          <li class="nav-item " >
            <a class="nav-link" href="/new/college"><button class="btn btn-outline-success text-white" style="border: 0px;" type="button">Add College</button></a>
          </li>
          <% } %>
        <li class="nav-item">
          <div class="dropdown " style="padding-top: 9px;">
            <button class="btn btn-outline-success text-white" type="button" id="dropdownMenuButton" style="border: 0px;"" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if(currentUser){ %>
                <%= currentUser.name %>
                <% } else{ %>
              Accounts
              <% } %>
            </button>
            <div class="dropdown-menu bg-primary" aria-labelledby="dropdownMenuButton" >
