<%- include ("./includes/header") %>

<div class="container">
    
    <h1> <center> Colleges </center> </h1>
    
    <%  maindata.forEach(function(data){ %>

   <div class="card colleges-card">
       <div class="row"> 
         <div class="col-md-auto">
          <img src="<%= data.image %>" class="rounded float-left" height="100px" width="100px">
         </div>
         <div class="col-md-auto">
            <h5 class="card-title"><%= data.name %></h5>
            <h6 class="card-subtitle  mb-2 text-muted colleges-facts"><i class="fas fa-map-marker-alt"></i> <%= data.place %></h6>
            <h6 class="facts"> <%= data.facts[0] %>  |  <%= data.facts[1] %>  |  <%= data.facts[2] %>  </h6>
          </div>
        </div>
        
        <div class="row colleges-sec-data">
          <div class="col-md-4">
            Affiliation :  <%= data.affiliation %>
          </div>
          <div class="col-md 4">
            Established In : <%= data.estYear %>
          </div>
          <div class="col-md 4">
            Domin : <%= data.type %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md">
            <%= data.about %>...
          </div>
          <div class="col-md-1"></div>
        </div>
        <% if(data.type == "eng") { %>
        <div class="row colleges-placement">
          <div class="col-md-4">
            Year : <%= data.placement.year %>
          </div>
          <div class="col-md-4">
            Average : <%= data.placement.average %>
          </div>
          <div class="col-md-4">
            Highest : <%= data.placement.highest %>
          </div>
        </div>
        <% }%>

        <%if( currentUser && currentUser.admin == true ){ %>

          <div class="row admin-colleges">

            <div class="col-md-2"></div>
            <div class="col-md-8">
            <a href="/college/<%=data.collegeid%>/edit"><button class="btn btn-primary">Edit</button></a>

            <form action="/college/<%= data.collegeid %>?_method=DELETE" class="form-del" method="post">
              <button class="btn btn-danger float-right">Delete</button>
            </form>
          </div>
            <div class="col-md-2">   </div>
          </div>
          

          <% } %>

          <div class="row">
      
            <div class="col-md-2"></div>

            <div class="col-md-8">
              <a href="/college/<%=data.collegeid%>"> <button class="btn btn-primary "> View Details <i class="fas fa-info-circle"></i></button></a>
              <% if(data.admit==1){ %>
              <a href="/college/<%=data.collegeid%>"> <button class="btn btn-success float-right"> Get College <i class="far fa-check-circle"></i></button></a>
              <% } %>
            </div>
            <div class="col-md-2"></div>
          </div>
          

          <!-- <div class="col-md-2">
            <a href="/college/<%=data.collegeid%>><button class="btn btn-primary">Apply</button></a>
          </div> -->


    </div>

          
  <%   }); %>

</div>


<%- include ("includes/footer") %>